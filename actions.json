{
    "openapi": "3.1.0",
    "info": {
      "title": "My shows",
      "description": "Retrieves data about the shows i've watched, am interested in, and most importantly what i'm currently watching. Statuses can be either Watching, Next, Watched, Loved or Abandoned if I gave up on it before the end",
      "version": "v1.0.0"
    },
    "servers": [
      {
        "url": "https://tv-gpt.vercel.app/api"
      }
    ],
    "paths": {
      "/shows": {
        "get": {
          "description": "Get list of all my shows",
          "operationId": "GetCurrentShows",
          "deprecated": false
          "parameters": [
            {
              "name": "status",
              "in": "query",
              "description": "The status of the shows to include",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ]
        },
        "post": {
          "description": "Add a new show to the list",
          "operationId": "AddNewShow",
          "parameters": [
            {
              "name": "name",
              "in": "body",
              "description": "the name of the new show",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "app",
              "in": "body",
              "description": "The app where the new show is available",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "status",
              "in": "body",
              "description": "The status of the show",
              "required": true,
              "schema": {
                "type": "string"
              }
            }
          ],
          "deprecated": false
        }
      },
      "/shows/{id}": {
        "put": {
            "description": "Update a show in the list",
            "operationId": "UpdateShow",
            "parameters": [
                {
                  "name": "name",
                  "in": "body",
                  "description": "the name of the new show",
                  "required": false,
                  "schema": {
                    "type": "string"
                  }
                },
                {
                  "name": "app",
                  "in": "body",
                  "description": "The app where the new show is available",
                  "required": false,
                  "schema": {
                    "type": "string"
                  }
                },
                {
                  "name": "status",
                  "in": "body",
                  "description": "The status of the show",
                  "required": false,
                  "schema": {
                    "type": "string"
                  }
                }
              ]
        },
        "delete": {
            "description": "Remove a new show from the list",
            "operationId": "DeleteShow"
        }

      }
    },
    "components": {
      "schemas": {}
    }
  }