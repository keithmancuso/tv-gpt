{
    "openapi": "3.1.0",
    "info": {
      "title": "My shows",
      "description": "Retrieves and updates about my shows. Viewing statuses include Watching, Next, Watched, and Nope",
      "version": "v1.0.0"
    },
    "servers": [
      {
        "url": "https://tv-gpt.vercel.app/api"
      }
    ],
    "paths": {
      "/shows": {
        "get": {
          "description": "Get list of my shows",
          "operationId": "GetCurrentShows",
          "deprecated": false,
          "parameters": [
            {
              "name": "status",
              "in": "query",
              "description": "The viewing status of the shows to include, only accepts Watching, Next, Watched, and Nope. Exclude this parameter to return the full list",
              "required": false,
              "schema": {
                "type": "string"
              }
            }
          ]
        },
        "post": {
          "description": "Add a new show to the list",
          "operationId": "AddNewShow",
          "parameters": [
            {
              "name": "name",
              "in": "body",
              "description": "The name of the show",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "app",
              "in": "body",
              "description": "The streaming app its on",
              "required": true,
              "schema": {
                "type": "string"
              }
            },
            {
              "name": "status",
              "in": "body",
              "description": "My viewing status of the show. Accepts: Watching, Next, Watched, and Nope",
              "required": true,
              "schema": {
                "type": "string",
                "default": "Next"
              }
            },
            {
              "name": "rating",
              "in": "body",
              "description": "What did you think of the show?",
              "required": false,
              "schema": {
                "type": "integer",
                "minimum": 1,
                "maximum": 10
              }
            },
            {
              "name": "review",
              "in": "body",
              "description": "An ai generaged summary of your thoughts on the show.",
              "required": false,
              "schema": {
                "type": "string",
                "maxLength": 1024
              },
            },
            {
              "name": "favorite",
              "in": "body",
              "description": "Is it one of my favorite shows of all time?",
              "required": false,
              "schema": {
                "type": "boolean",
                "default": false
              }
            }
          ],
          "deprecated": false
        }
      },
      "/shows/{id}": {
        "put": {
            "description": "Update a show in the list",
            "operationId": "UpdateShow",
            "parameters": [
                {
                  "name": "name",
                  "in": "body",
                  "description": "the name of the new show",
                  "required": false,
                  "schema": {
                    "type": "string"
                  }
                },
                {
                  "name": "app",
                  "in": "body",
                  "description": "The app where the new show is available",
                  "required": false,
                  "schema": {
                    "type": "string"
                  }
                },
                {
                  "name": "status",
                  "in": "body",
                  "description": "The status of the show",
                  "required": false,
                  "schema": {
                    "type": "string"
                  }
                }
                ,,
                {
                  "name": "rating",
                  "in": "body",
                  "description": "What did you think of the show?",
                  "required": false,
                  "schema": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 10
                  }
                },
                {
                  "name": "review",
                  "in": "body",
                  "description": "An ai generaged summary of your thoughts on the show.",
                  "required": false,
                  "schema": {
                    "type": "string",
                    "maxLength": 1024
                  },
                },
                {
                  "name": "favorite",
                  "in": "body",
                  "description": "Is it one of my favorite shows of all time?",
                  "required": false,
                  "schema": {
                    "type": "boolean",
                    "default": false
                  }
                }
              ]
        },
        "delete": {
            "description": "Remove a new show from the list",
            "operationId": "DeleteShow"
        }

      }
    },
    "components": {
      "schemas": {}
    }
  }